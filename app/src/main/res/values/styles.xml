<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorTextMain </item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardTextView" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>
    <style name="floating_menu">
        <item name="android:background">@drawable/float_menu_label</item>
        <item name="android:textColor">@color/colorPrimaryText</item>

        <item name="android:padding">5dp</item>
    </style>


</resources>
