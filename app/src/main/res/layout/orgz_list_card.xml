<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorCardBackground"
    android:padding="@dimen/outer_padding">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_OLC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/card_view_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tw_card_title_OLC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                tools:text="sfdgdsfg" />

            <TextView
                android:id="@+id/tw_card_region_OLC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tw_card_title_OLC"
                tools:text="sfdgdsfg" />

            <TextView
                android:id="@+id/tw_card_city_OLC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tw_card_region_OLC"
                tools:text="sfdgdsfg" />

            <TextView
                android:id="@+id/tw_card_phone_OLC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tw_card_city_OLC"
                tools:text="sfdgdsfg" />

            <TextView
                android:id="@+id/tw_card_address_OLC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tw_card_phone_OLC"
                tools:text="sfdgdsfg" />

            <android.support.design.widget.TabLayout
                android:background="@color/colorTabLayout"
                android:id="@+id/tab_layout_OLC"
                app:tabMode="fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tw_card_address_OLC"
                card_view:tabIndicatorHeight="@dimen/tab_indicator_heigth"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>