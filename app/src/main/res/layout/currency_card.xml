<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:orientation="horizontal"
    android:padding="@dimen/outer_padding">

    <TextView
        android:id="@+id/tv_title_CC"
        style="@style/CardTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:text="Доллар США" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ask_arrow_CC"
                android:layout_width="@dimen/iv_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginRight="@dimen/margin_right" />

            <TextView
                android:id="@+id/tw_ask_CC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22.3456" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bid_arrow_CC"
                android:layout_width="@dimen/iv_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginRight="@dimen/margin_right" />

            <TextView
                android:id="@+id/tv_bid_CC"
                style="@style/CardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22.3456" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>