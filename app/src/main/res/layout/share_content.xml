<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_SC"
        style="@style/CardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextMain"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        tools:text="Альфа Банк" />

    <TextView
        android:id="@+id/tv_region_SC"
        style="@style/CardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Закарпатская область" />

    <TextView
        android:id="@+id/tv_city_SC"
        style="@style/CardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ужгород" />
    <ListView
        android:id="@+id/list_view_SC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_view_row"/>
    <Button
        android:id="@+id/btn_share_SC"
        android:background="@color/colorTabLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/share_button"
        android:textSize="@dimen/title_text_size"/>
</LinearLayout>